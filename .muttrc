# A macro to reload the contents of the mailbox. Use this when the results of a
# query have changed, and you want to see them.
macro index "#" '<sync-mailbox><change-folder>^<enter>' "Reload mailbox"

# List or alter notmuch tags of a message or set of tagged messages, by passing
# through a script to the notmuch CLI.
#macro index,pager ",T" "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag<enter>" "Manage notmuch tags"
macro index,pager "l" "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag<enter>" "Manage notmuch tags"

# Shortcuts for managing specific tags.
# e.g.:
#macro index,pager ",ti"   "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag +interesting_tag<enter>" "Add 'interesting_tag' tag"
#macro index,pager ",tI"   "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag -interesting_tag<enter>" "Remove 'interesting_tag' tag"


# Creating a new notmuch search is as simple as creating a new directory inside
# notmuchfs. This macro does just that.
#
# The default search stem to use. May be empty.
# Beware! Setting "pipe_decode" in .muttrc defeats the method used below
set my_default_search=""
macro index "/" "<shell-escape>prompt_mkdir $folder$my_default_search <enter><change-folder>?" "Create a new notmuchfs query mailbox"

# custom tag macro
macro index,pager ",tw" "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag +watch<enter>" "Add 'watch' tag"

#macro index,pager "e"   "<pipe-message>cat > /home/mturquette/msg"
macro index,pager "e"   "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag -inbox<enter>" "Remove 'inbox' tag"

macro index,pager "I"   "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag -unread<enter>" "Remove 'unread' tag"
macro index,pager "U"   "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag +unread<enter><toggle-new>" "Add 'unread' tag"

macro index,pager "s"   "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag +flagged<enter>" "Add 'flagged' tag"
macro index,pager "S"   "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag -flagged<enter>" "Remove 'flagged' tag"
# need replacement for S - new notmuch query
# need replacement for s - save message

macro index,pager "+"   "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag +important<enter>" "Add 'important' tag"
macro index,pager "-"   "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag -important<enter>" "Remove 'important' tag"

macro index,pager "!"   "<pipe-message>formail -d -xMessage-id: -s | tr -d \"<>\" | notmuch_tag +spam<enter>" "Add 'spam' tag"

# custom navigation macro
macro index,pager gi <change-folder>"=inbox<enter>" "Go to Inbox"
macro index,pager gs <change-folder>"=tag:flagged<enter>" "Go to Starred"
macro index,pager gd <change-folder>"=tag:drafts<enter>" "Go to Drafts"
macro index,pager gt <change-folder>"=tag:sent<enter>" "Go to Sent"
macro index,pager gl <change-folder>
# non-standard, just for me
macro index,pager gc <change-folder>"=clk" "Go to linux-clk"

# pager macros, deviate a bit from Gmail:
# In Gmail we use j/k to navigate to next/previous threads/conversations and
# up/down arrows to scroll through a message body
# In mutt we use j/k to scroll through a message body (like vim), and up/down
# arrows to navigate to next/previous threads/conversations
macro pager u <exit> "Back to threadlist"
macro pager n <next-subthread> "Read next message"
macro pager p <previous-subthread> "Read previous message"
macro pager r <reply> "Reply"
macro pager a <group-reply> "Reply all"

macro index,pager c <mail> "Compose"

macro index x <tag-thread> "Select conversation"
